<IfModule mod_ssl.c>
<VirtualHost *:443>
        DocumentRoot /usr/share/tomcat6/webapps/knb
        ServerName cn-dev.dataone.org

        ScriptAlias /knb/cgi-bin/ /usr/share/tomcat6/webapps/knb/cgi-bin/
        <Directory "/usr/share/tomcat6/webapps/knb/cgi-bin/">
                AllowOverride All
                Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
                Order allow,deny
                Allow from all
        </Directory>

        <IfModule mod_jk.c>
                JkMount /knb ajp13_worker
                JkMount /knb/* ajp13_worker
                JkMount /knb/metacat ajp13_worker
                JkMount /*.jsp ajp13_worker
                JkUnMount /knb/cgi-bin/* ajp13_worker
        </IfModule>

        #   SSL Engine Switch:
        #   Enable/Disable SSL for this virtual host.
        SSLEngine on
        SSLOptions +StrictRequire

        SSLCertificateFile /etc/ssl/certs/_.dataone.org.crt
        SSLCertificateKeyFile /etc/ssl/private/dataone_org.key
        SSLCertificateChainFile /etc/ssl/certs/gd_intermediate_bundle.crt

</VirtualHost>
</IfModule>
        
